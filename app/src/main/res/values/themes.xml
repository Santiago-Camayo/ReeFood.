<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ReFood" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/azuldifuminado</item>
        <item name="itemIconTint">@color/azulbtn</item>
        <item name="itemTextColor">@color/azulbtn</item>
        <item name="colorPrimaryVariant">@color/azulbtn</item>

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    
    <style name="animciondedialogo">
        <item name="android:windowEnterAnimation">@anim/entrada</item>
        <item name="android:windowExitAnimation">@anim/salida</item>
    </style>

    <style name="Theme.ReFood" parent="Base.Theme.ReFood" />

    <style name="Theme.ReFood.Fullscreen" parent="Theme.ReFood">
        <item name="android:actionBarStyle">@style/Widget.Theme.ReFood.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.ReFood.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>